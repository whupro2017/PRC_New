<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- author lyx; date 2016.09.28 -->
<mapper namespace="com.whu.pro.dao.ExpSourQueryDao">
	<select id="InsertElement" parameterType="com.whu.pro.mapper.param.ExpSourQueryParam"
		resultType="com.whu.pro.mapper.result.ExpSourQueryResult">
		insert into explosion_source(element_manager,element_remark,element_image,create_date,localname) values(  #{manager},  #{remark},  #{element_image},  #{begin_date},  #{localname} );
	</select>
	
	<select id="selectMaxId" resultType="com.whu.pro.mapper.result.ExpSourQueryResult">
		select *from explosion_source where element_id=(select max(element_id) from explosion_source);
	</select>
	
	
</mapper>